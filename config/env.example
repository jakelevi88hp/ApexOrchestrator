# Apex Orchestrator Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# CRITICAL: Authentication (REQUIRED)
# ============================================
# Must be at least 32 characters for security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
APEX_SHARED_KEY=your_shared_key_here_minimum_32_characters_required

# ============================================
# Environment Configuration
# ============================================
ENVIRONMENT=production  # development, staging, or production

# ============================================
# Model Provider Configuration
# ============================================
ORCH_MODEL_PROVIDER=ollama  # or "openai"
OLLAMA_URL=http://127.0.0.1:11434
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# ============================================
# Webhook Configuration (Optional)
# ============================================
MAKE_WEBHOOK_URL=your_make_webhook_url_here

# ============================================
# Telegram Notifications (Optional)
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# Directory Configuration
# ============================================
LOG_DIR=logs
WORK_DIR=C:\ApexWork

# ============================================
# Security Configuration (Optional)
# ============================================
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=

